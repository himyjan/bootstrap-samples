@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">

    <div class="alert alert-primary" role="alert">
        <h1 class="fs-5">Bootstrap dark/light mode</h1>
    </div>

    <!-- Bootstrap 5 switch -->
    <div class="form-check form-switch mb-3 ms-2">
        <input class="form-check-input" type="checkbox" id="darkModeSwitch" checked>
        <label class="form-check-label" for="darkModeSwitch">Dark Mode</label>
    </div>

    <form>
        <fieldset id="infoFieldSet" class="border p-3 ms-2 mt-4 mb-5" style="width: 28em;">
            <legend class="float-none w-auto px-1" id="infoLegend">
                Personal information
            </legend>
            <div class="mb-3">
                <label for="emailAddress" class="form-label">Email address</label>
                <input type="email" class="form-control" style="width: 200px;" id="emailAddress" aria-describedby="emailHelp" value="Test@gmail.com">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" style="width: 200px;" id="exampleInputPassword1" value="password">
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" checked="true">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
        </fieldset>
        
        <div class="row">
            <div class="col-auto ms-2">
                <button id="post" type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        
    </form>

</div>
@section Scripts {
    <script src="js/index.js"></script>
}